---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <nav>
      <div class="container">
        <a href="/" class="logo">Denerg Polito</a>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/people">Team</a></li>
          <li><a href="/#projects">Projects</a></li>
          <li><a href="/#pillars">Departments</a></li>
          <li><a href="/blog">Blog</a></li>
          <li><a href="/keystatic">Admin</a></li>
        </ul>
      </div>
    </nav>
    <main>
      <slot />
    </main>
    <footer>
      <div class="container">
        <p>&copy; 2026 University Research Team. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
