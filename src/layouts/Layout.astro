---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const withBase = (href: string) => (href?.startsWith('/') ? `${base}${href}` : href);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <nav>
      <div class="container">
        <a href={withBase('/')} class="logo">Denerg Polito</a>
        <ul>
          <li><a href={withBase('/')}>Home</a></li>
          <li><a href={withBase('/people')}>Team</a></li>
          <li><a href={withBase('/#projects')}>Projects</a></li>
          <li><a href={withBase('/#pillars')}>Departments</a></li>
          <li><a href={withBase('/blog')}>Blog</a></li>
          <li><a href={withBase('/keystatic')}>Admin</a></li>
        </ul>
      </div>
    </nav>
    <main>
      <slot />
    </main>
    <footer>
      <div class="container">
        <p>&copy; 2026 University Research Team. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
